@using set_basic_aspnet_mvc.Helpers

<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewBag.Title</title>

    <link rel="shortcut icon" href="/public/img/favicon.ico" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/public/css/app.css?v=1" />
</head>
<body>
    <header class="navbar navbar-default navbar-fixed-top" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">@Html.LocalizationString("toggle_navigation")</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="/lang/change/tr"><img src="/public/img/flag/tr.png" alt="Türkçe" /></a></li>
                    <li><a href="/lang/change/en"><img src="/public/img/flag/en.png" alt="English" /></a></li>
                    <li><a href="/">@Html.LocalizationString("menu_home")</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form class="navbar-form" role="search">
                            <div class="form-group">
                                <input type="text" id="txtSearch" class="form-control" placeholder="@Html.LocalizationString("menu_search")">
                            </div>
                        </form>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@GravatarHelper.GetGravatarURL(User.Identity.GetUserEmail(), 25)" alt="@User.Identity.GetUserFullName()" class="img-circle" />
                                @(User.Identity.GetUserFullName()) &nbsp;<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/user/detail/@User.Identity.GetUserId()">@Html.LocalizationString("menu_profile")</a></li>
                                <li class="divider"></li>
                                <li><a href="/user/logout">@Html.LocalizationString("menu_logout")</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </header>
    <div id="main" class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js" type="text/javascript"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>

    <script src="/public/js/app.js"></script>

    @RenderSection("script", false)
</body>
</html>
